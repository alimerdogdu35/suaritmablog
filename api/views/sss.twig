  <style>
    :root {
      --blue: #0a66c2;
      --blue-600: #0a5bb0;
      --blue-050: #e9f3ff;
      --bg: #ffffff;
      --text: #0b1220;
      --muted: #5a6b81;
      --border: #e6ecf2;
      --radius: 16px;
      --shadow: 0 8px 24px rgba(10, 102, 194, 0.08);
    }
    html, body { background: var(--bg); color: var(--text); font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji"; }
    .container { max-width: 1100px; margin: 0 auto; padding: 24px; }
    header { display:flex; align-items: center; justify-content: space-between; gap:16px; flex-wrap: wrap; }
    h1 { font-size: clamp(24px, 2.6vw, 40px); color: var(--blue); margin: 8px 0; letter-spacing: -0.02em; }
    .sub { color: var(--muted); margin-top: -6px; }

    /* Controls */
    .controls { display:grid; grid-template-columns: 1fr; gap:12px; margin: 18px 0 8px; }
    @media (min-width: 720px) { .controls { grid-template-columns: 1fr auto; align-items: center; } }

    .search { position: relative; }
    .search input { width: 100%; padding: 14px 44px 14px 14px; border:1px solid var(--border); border-radius: var(--radius); outline:none; box-shadow: var(--shadow); }
    .search svg { position:absolute; right: 12px; top: 50%; transform: translateY(-50%); width:22px; height:22px; stroke: var(--blue); }

    .tabs { display:flex; flex-wrap: wrap; gap:8px; }
    .tab { border:1px solid var(--border); background: var(--blue-050); color: var(--blue); padding:10px 14px; border-radius: 999px; cursor:pointer; user-select:none; font-weight: 600; transition: transform .1s; }
    .tab[aria-pressed="true"]{ background: var(--blue); color: white; }
    .tab:active{ transform: scale(0.98); }

    /* Utilities */
    .bar { display:flex; justify-content: space-between; align-items:center; gap:12px; margin: 16px 0; flex-wrap: wrap; }
    .count { color: var(--muted); }
    .actions { display:flex; gap:8px; }
    .btn { background: white; border:1px solid var(--border); padding:10px 14px; border-radius: 10px; cursor:pointer; box-shadow: var(--shadow); font-weight:600; }
    .btn:hover{ background: var(--blue-050); }

    /* FAQ */
    .faq { display:grid; gap: 12px; }
    details.faq-item { background: white; border:1px solid var(--border); border-radius: var(--radius); padding: 8px 14px; box-shadow: var(--shadow); }
    details[open] { border-color: var(--blue-600); }
    summary { list-style: none; cursor: pointer; display:flex; align-items: flex-start; gap: 10px; }
    summary::-webkit-details-marker { display:none; }
    .q { flex:1; color: var(--blue); font-weight: 800; font-size: 16px; line-height: 1.4; }
    .badge { font-size: 11px; font-weight: 700; color: var(--blue); background: var(--blue-050); border:1px solid var(--border); padding: 4px 8px; border-radius: 999px; }
    .a { color:#1b2735; padding: 10px 4px 6px 32px; line-height: 1.7; }
    .meta { display:flex; align-items:center; justify-content: space-between; gap:8px; padding: 0 4px 8px 32px; }
    .vote { display:flex; gap:6px; align-items:center; }
    .vote button { border:none; background: transparent; cursor:pointer; padding:6px; border-radius: 8px; }
    .vote button[aria-pressed="true"]{ background: var(--blue-050); }
    .copylink { font-size: 12px; color: var(--muted); cursor:pointer; }

    /* Footer CTA */
    .cta { margin: 32px 0 12px; padding: 18px; border:1px dashed var(--blue-600); border-radius: var(--radius); background: #f8fbff; display:grid; gap:8px; }
