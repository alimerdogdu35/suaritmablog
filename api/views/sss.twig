  <script>
    // --- Helpers ---
    const $$ = (sel, root=document) => Array.from(root.querySelectorAll(sel));
    const $ = (sel, root=document) => root.querySelector(sel);

    // Search & Filter
    const searchInput = $('#search');
    const tabs = $$('.tab');
    const faqItems = $$('.faq-item');
    const countLabel = $('#count');

    let activeFilter = 'all';

    function applyFilters(){
      const q = searchInput.value.trim().toLowerCase();
      let matchCount = 0;
      faqItems.forEach(item => {
        const cat = item.dataset.cat;
        const text = item.innerText.toLowerCase();
        const categoryOk = (activeFilter === 'all') || (cat === activeFilter);
        const searchOk = !q || text.includes(q);
        const show = categoryOk && searchOk;
        item.classList.toggle('hidden', !show);
        if(show) matchCount++;
      });
      countLabel.textContent = matchCount + ' sonuÃ§';
    }

    searchInput.addEventListener('input', applyFilters);

    tabs.forEach(btn => btn.addEventListener('click', () => {
      tabs.forEach(b => b.setAttribute('aria-pressed', 'false'));
      btn.setAttribute('aria-pressed', 'true');
      activeFilter = btn.dataset.filter;
      applyFilters();
    }));

    // Expand/Collapse All respecting filter
    $('#expandAll').addEventListener('click', () => {
      $$('.faq-item:not(.hidden)').forEach(d => d.open = true);
    });
    $('#collapseAll').addEventListener('click', () => {
      $$('.faq-item').forEach(d => d.open = false);
    });

    // Voting with localStorage
    const store = window.localStorage;
    function updateScore(el){
      const key = el.dataset.key;
      const up = store.getItem(key+':up') === '1' ? 1 : 0;
      const down = store.getItem(key+':down') === '1' ? 1 : 0;
      const score = up - down;
      el.querySelector('.score').textContent = score;
      el.querySelector('.up').setAttribute('aria-pressed', up? 'true':'false');
      el.querySelector('.down').setAttribute('aria-pressed', down? 'true':'false');
    }
    $$('.vote').forEach(v => {
      const key = v.dataset.key;
      updateScore(v);
      v.querySelector('.up').addEventListener('click', () => {
        const cur = store.getItem(key+':up') === '1';
        store.setItem(key+':up', cur ? '0' : '1');
        if(store.getItem(key+':down') === '1' && !cur) store.setItem(key+':down', '0');
        updateScore(v);
      });
      v.querySelector('.down').addEventListener('click', () => {
        const cur = store.getItem(key+':down') === '1';
        store.setItem(key+':down', cur ? '0' : '1');
        if(store.getItem(key+':up') === '1' && !cur) store.setItem(key+':up', '0');
        updateScore(v);
      });
    });

    // Copy link
    $$('.copylink').forEach(c => {
      c.addEventListener('click', async () => {
        const id = c.dataset.copy;
        const url = location.origin + location.pathname + id;
        try {
          await navigator.clipboard.writeText(url);
          c.textContent = 'KopyalandÄ±!';
          setTimeout(() => c.textContent = 'BaÄŸlantÄ±yÄ± kopyala', 1200);
        } catch(e){
          alert('BaÄŸlantÄ± kopyalanamadÄ±: ' + url);
        }
      });
    });

    // JSON-LD (FAQPage)
    (function addFAQSchema(){
      const faqs = $$('.faq-item');
      const mainEntity = faqs.map(d => ({
        '@type': 'Question',
        'name': d.querySelector('.q').textContent.trim(),
        'acceptedAnswer': {
          '@type': 'Answer',
          'text': d.querySelector('.a').innerText.trim()
        }
      }));
      const script = document.createElement('script');
      script.type = 'application/ld+json';
      script.textContent = JSON.stringify({ '@context': 'https://schema.org', '@type': 'FAQPage', mainEntity }, null, 2);
      document.head.appendChild(script);
    })();

    // Init
    applyFilters();

    // Open target if hash exists
    if(location.hash){
      const target = document.querySelector(location.hash);
      if(target && target.classList.contains('faq-item')){
        target.open = true;
        target.scrollIntoView({behavior: 'smooth', block: 'start'});
      }
    }
  </script>
