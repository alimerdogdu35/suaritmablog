{
  "version": 2,
  "builds": [
    { 
      "src": "api/index.js", 
      "use": "@vercel/node" 
    },
    { 
      "src": "api/importPostsFunction.js", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "api/post.json"
        ]
      }
    },
    { 
      "src": "public/**/*", 
      "use": "@vercel/static" 
    }
  ],
  "routes": [
    { 
      "src": "/api/importPosts", 
      "dest": "/api/importPostsFunction.js" 
    },
    { 
      "src": "/api/(.*)", 
      "dest": "/api/index.js" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/api/index.js" 
    }
  ]
}