{% extends "base.twig" %}

{% block title %}Ürünlerimiz{% endblock %}

{% block content %}
<main class="container mx-auto px-4 py-24">
    <h1 class="text-4xl font-bold text-blue-900 text-center mb-10">Ürünlerimiz</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
        {% for product in products %}
        <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300 overflow-hidden border border-blue-100">
            <img class="w-full h-48 object-cover object-center" src="{{ product.image }}" alt="{{ product.title }}">
            <div class="p-6">
                <h2 class="text-xl font-bold text-blue-900 mb-2">{{ product.title }}</h2>
                <p class="text-gray-600 mb-4 h-16 overflow-hidden">{{ product.description }}</p>
                <ul class="text-gray-700 list-disc list-inside space-y-1 mb-4">
                    {% for feature in product.features %}
                    <li>{{ feature }}</li>
                    {% endfor %}
                </ul>
                <div class="flex justify-between items-center mt-4">
                    <span class="text-2xl font-bold text-blue-700">{{ product.price }} TL</span>
                    <a href="/contact" class="bg-blue-600 text-white font-semibold py-2 px-4 rounded-full hover:bg-blue-700 transition duration-300">
                        Bilgi Al
                    </a>
                </div>
            </div>
        </div>
        {% else %}
        <p class="text-center text-gray-500 col-span-full">Henüz listelenecek bir ürün bulunmamaktadır.</p>
        {% endfor %}
    </div>
</main>
{% endblock %}