<script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
<script>
    // Yeni animasyonlar için anahtar kareler
    const style = document.createElement('style');
    style.innerHTML = `
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        @keyframes fadeInLeft {
            from { opacity: 0; transform: translateX(-20px); }
            to { opacity: 1; transform: translateX(0); }
        }
        @keyframes fadeInRight {
            from { opacity: 0; transform: translateX(20px); }
            to { opacity: 1; transform: translateX(0); }
        }
        .animate-fade-in-up { animation: fadeInUp 0.8s ease-out forwards; }
        .animate-fade-in-left { animation: fadeInLeft 0.8s ease-out forwards; }
        .animate-fade-in-right { animation: fadeInRight 0.8s ease-out forwards; }
    `;
    document.head.appendChild(style);

    // Fade-in animasyonu için Observer
    const observer = new IntersectionObserver(entries => {
      entries.forEach(entry => {
        if(entry.isIntersecting){
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
          entry.target.classList.add('visible');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.2 });

    document.querySelectorAll('.animate-fade-in-up, .animate-fade-in-left, .animate-fade-in-right').forEach(el => {
        el.style.opacity = '0';
        el.style.transform = 'translateY(20px)';
        observer.observe(el);
    });

    // Sayfa başlığı ve alt başlık için farklı bir animasyon
    document.querySelectorAll('.animate-fade-in-up, .animate-fade-in').forEach((el, index) => {
        el.style.animationDelay = `${index * 0.1}s`;
    });


    // Sayfa yüklendiğinde sayaçları tetikle
    let counterAnimated = false;
    const countersSection = document.querySelector('.grid.grid-cols-2.md\\:grid-cols-4');
    const counterObserver = new IntersectionObserver(entries => {
        if(entries[0].isIntersecting && !counterAnimated){
            animateCounters();
            counterAnimated = true;
        }
    }, { threshold: 0.5 });
    
    if(countersSection) {
        counterObserver.observe(countersSection);
    }
    
    function animateCounters() {
        const counters = document.querySelectorAll(".counter");
        counters.forEach(counter => {
            const target = +counter.getAttribute("data-target");
            let count = 0;
            const updateCount = () => {
                const speed = 100;
                const increment = target / speed;
                count += increment;
                if(count < target) {
                    counter.innerText = Math.ceil(count);
                    setTimeout(updateCount, 20);
                } else {
                    counter.innerText = target + (target > 50 ? "+" : "");
                }
            };
            updateCount();
        });
    }

    // Swiper için JS kodunu DOM içeriği yüklendikten sonra başlatıyoruz
    new Swiper('.mySwiper', {
      loop: true,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      autoplay: {
        delay: 3000,
      },
    });
</script>
